    <!--sign up 3-->
    <section id="contact" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="header-section text-center">
                    <h2>Sign Up</h2>

                    <hr class="bottom-line">
                </div>
                <h4>Step 3 (Lawyer)</h4>
                <br />
                <!--
                <div id="sendmessage">Your have succefully completed signup step 1</div>
